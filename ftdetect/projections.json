{
  "lib/*.ex": {
    "type":      "src",
    "alternate": "test/{}_test.exs",
    "template": [
      "# test/{}_test.exs",
      "defmodule XXX do", 
      "end"
    ]
  },
  "test/*_test.exs": {
    "type":      "test",
    "alternate": "lib/{}.ex",
    "template": [
      "# lib/{}.ex",
      "defmodule XXX do",
      "end"
    ]
  },
  "*_controller.ex": {
    "type": "controller",
    "related": [
      "{dirname|dirname}/views/{basename}_view.ex"
    ]
  },
  "*_view.ex": {
    "type": "view",
    "related": [
      "{dirname|dirname}/controllers/{basename}_controller.ex"
    ]
  },
  "*eex": {"type": "template"}
}
